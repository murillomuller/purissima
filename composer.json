{
    "name": "purissima/php-project",
    "description": "PHP project with external API integration and PDF editing capabilities",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "setasign/fpdf": "^1.8",
        "setasign/fpdi": "^2.6",
        "tecnickcom/tcpdf": "^6.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
